install.packages("arules",dependencies=TRUE)
install.packages("aruleviz",dependencies = TRUE)
library(arules)
library(aruleViz)
data("Groceries")
rules<-apriori(Groceries,parameter=list(support=0.01,confidence=0.05))
inspect(head(rules,n=5))
sorted_rules<-sort(rules,by='lift',decreasing=TRUE)
inspect(head(sorted_rules,n=5))
plot(rules,method="graph",control=list(type="items"))
